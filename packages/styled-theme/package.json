{
  "name": "@trendmicro/styled-theme",
  "version": "0.0.0",
  "description": "An extensible theming system for building UI component library with Styled System",
  "main": "dist/styled-theme.cjs.js",
  "module": "dist/styled-theme.esm.js",
  "publishConfig": {
    "access": "public",
    "directory": "build"
  },
  "scripts": {
    "clean": "rimraf build dist",
    "prepare": "yarn run build",
    "build": "yarn run build:cjs && yarn run build:dist",
    "build:cjs": "cross-env NODE_ENV=cjs babel --root-mode upward src --out-dir build --ignore='**/__tests__/**'",
    "build:dist": "cross-env PACKAGE_NAME=styled-theme INPUT=src OUTPUT_DIRECTORY=dist rollup --config ../../scripts/rollup.config.js",
    "postbuild": "cpy --parents {dist/**,LICENSE,README.md,.npmignore,package.json} build"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "~7.0.0",
    "cpy-cli": "~3.0.0",
    "cross-env": "~6.0.3",
    "mkdirp": "~0.5.1",
    "rimraf": "~3.0.0",
    "rollup": "~1.29.0",
    "rollup-plugin-babel": "~4.3.3"
  },
  "author": "Cheton Wu <cheton_wu@trendmicro.com>",
  "homepage": "https://github.com/trendmicro-frontend/styled-ui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trendmicro-frontend/styled-ui.git",
    "directory": "packages/styled-theme"
  },
  "bugs": {
    "url": "https://github.com/trendmicro-frontend/styled-ui/issues"
  },
  "keywords": [
    "design-system",
    "styled-system",
    "theme"
  ]
}
